{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@business/*": ["src/business/*"],
      "@types/*": ["src/types/*"]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "skipIgnore": true,
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "skipLibCheck": true
    }
  },
  "include": [
    "src/**/*",
    "lib/**/*",
    "bin/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lambda",
    "scripts",
    "test"
  ]
}